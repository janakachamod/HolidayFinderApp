<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".getnotification">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="280dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:orientation="vertical"
        android:background="@drawable/notification_view">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Hello, Welcome!"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:textSize="25sp"
            android:layout_marginStart="100dp"
            android:gravity="center">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Reminder"
            android:textColor="@color/gray"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="100dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="15dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            >
            <TextView
                android:id="@+id/seleectedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Time insert"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="40sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventname"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectvalue"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="26dp"
        android:backgroundTint="@color/lavender"
        android:background="@drawable/button"
        android:text="select Date"
        android:textSize="26dp"/>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/setvalue"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="26dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/lavender"
        android:text="set value"
        android:textSize="26dp"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/setcancel"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:layout_marginHorizontal="26dp"
        android:backgroundTint="@color/lavender"
        android:text="Cancel"
        android:textSize="26dp"/>

</LinearLayout>